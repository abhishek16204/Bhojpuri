<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="20dp"

        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp">
    <TextView
        android:padding="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/question_list_question"
        android:text="Text"
        android:textColor="#20B2AA"
        android:fontFamily="sans-serif"
        android:textSize="20dp" />

        <RadioGroup
            android:fontFamily="sans-serif"
            android:id="@+id/radiogroup_question_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="7dp"
            android:visibility="gone"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:background="@drawable/wborder"
            android:hint="Enter Your answer here..."
            android:id="@+id/optionEdit_baseline_survey"
            android:visibility="gone"/>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="20dp"
            android:visibility="gone"
            android:id="@+id/frame_container1"
            android:layout_marginLeft="20dp">
            <TextView
                android:layout_width="match_parent"
                android:background="@drawable/wborder"
                android:padding="10dp"
                android:visibility="gone"
                android:layout_marginBottom="10dp"
                android:layout_height="wrap_content"
                android:textSize="18dp"
                android:id="@+id/datePicker_baseline_survey"/>

            <ImageView
                android:layout_width="18dp"
                android:layout_height="20dp"
                android:layout_gravity="end"
                android:layout_marginTop="15dp"
                android:layout_marginRight="10dp"
                android:src="@drawable/dd" />
        </FrameLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:fontFamily="sans-serif"
            android:includeFontPadding="false"
            android:text="Click CAMERA ICON to capture image (Mandatory)"
            android:textSize="15dp"
            android:visibility="gone"
            android:textColor="#FF0000"
            android:id="@+id/camera_alert_list_question"/>

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/camera"
            android:textColor="#ffffff"
            android:id="@+id/camera_image_list_question"
            android:background="@drawable/bg2"
            android:layout_marginTop="10dp"
            android:layout_gravity="center"
            android:layout_marginBottom="5dp"
            android:visibility="gone" />

      <Button
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:fontFamily="sans-serif"
          android:id="@+id/retake_image_list_question"
          android:background="@drawable/bg_submit"
          android:layout_gravity="center_horizontal"
          android:visibility="gone"
          android:textColor="#ffffff"
          android:layout_marginBottom="5dp"
          android:gravity="center"/>

        <Button
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:text="SUBMIT"
            android:fontFamily="sans-serif"
            android:visibility="gone"
            android:textColor="#fff"
            android:background="@drawable/bg_submit"
            android:layout_gravity="center_horizontal"
            android:id="@+id/sub"/>
        <View
            android:layout_width="fill_parent"
            android:layout_height="2dp"
            android:background="#c0c0c0"/>

    </LinearLayout>
</LinearLayout>