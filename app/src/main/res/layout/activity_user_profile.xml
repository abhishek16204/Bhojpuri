<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"

    tools:context=".UserProfile">

    <TextView
        android:id="@+id/name2"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:paddingTop="20dp"
        android:textStyle="bold"
        android:textColor="#000000"
        android:visibility="gone"
        android:textSize="20dp"
        android:textAlignment="center"
        android:background="#0DB5BA"
        android:text="dob" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#FFF"
            android:orientation="vertical">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/header_cover_image"
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:background="@color/blue"
                    android:scaleType="centerCrop"
                    />

                <ImageButton
                    android:id="@+id/user_profile_photo"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:layout_below="@+id/header_cover_image"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="-60dp"
                    android:background="#ffffff"
                    android:elevation="5dp"
                    android:padding="20dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/user"
                    tools:ignore="UnknownId" />

                <RelativeLayout
                    android:id="@+id/profile_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/header_cover_image"
                    android:background="#FFF"
                    android:elevation="4dp"
                    android:paddingBottom="24dp">

<!--

                    <ImageView
                        android:id="@+id/add_friend"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_marginLeft="16dp"
                        android:layout_marginTop="16dp"
                        android:visibility="gone"
                        android:layout_toLeftOf="@+id/drop_down_option_menu"
                        android:src="@drawable/ic_menu_camera" />

                    <ImageView
                        android:id="@+id/drop_down_option_menu"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_alignParentRight="true"
                        android:layout_marginLeft="16dp"
                        android:layout_marginTop="16dp"
                        android:visibility="gone"
                        android:src="@drawable/ic_menu_manage" />
-->

                    <TextView
                        android:id="@+id/name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="76dp"
                        android:text=" Teacher_Name"
                        android:textColor="#4b4b4b"
                        android:textSize="24sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/user_profile_short_bio"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/user_profile_name"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="12dp"
                        android:visibility="gone"
                        android:text="Android free tutorials and example"
                        android:textColor="#fff"
                        android:textSize="14sp"
                        tools:ignore="UnknownId" />
                </RelativeLayout>
            </RelativeLayout>
            <TextView

                android:layout_width="match_parent"

                android:textSize="20dp"
                android:textStyle="bold"
                android:layout_marginTop="10dp"
                android:paddingTop="5dp"
                android:shadowColor="#000"
                android:shadowDx="0"
                android:shadowDy="0"
                android:shadowRadius="100"
                android:background="#ffffff"
                android:textAlignment="center"
                android:textColor="#000000"
                android:layout_height="38dp"
                android:text="Personal Info." />

            <FrameLayout
                android:layout_width="match_parent"
                android:background="@drawable/myborder"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="10dp"
                android:layout_height="150dp">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:orientation="vertical"
                    android:layout_height="135dp">
                    <TextView
                        android:id="@+id/gender"
                        android:layout_width="320dp"
                        android:layout_height="42dp"
                        android:text="gender" />

                    <TextView
                        android:id="@+id/dob1"
                        android:layout_width="320dp"
                        android:layout_height="42dp"
                        android:layout_below="@+id/gender"
                        android:layout_marginTop="2dp"
                        android:text="dob" />

                </LinearLayout>

            </FrameLayout>
            <TextView
                android:layout_width="match_parent"

                android:textSize="20dp"
                android:paddingTop="5dp"
                android:textStyle="bold"

                android:layout_marginTop="10dp"
                android:shadowColor="#000"
                android:shadowDx="0"
                android:shadowDy="0"
                android:shadowRadius="100"
                android:background="#ffffff"
                android:textAlignment="center"
                android:textColor="#000000"
                android:layout_height="38dp"
                android:text="Professional Info." />
            <FrameLayout
                android:layout_width="match_parent"
                android:background="@drawable/myborder"
                android:layout_marginLeft="10dp"

                android:layout_marginTop="10dp"
                android:layout_marginRight="10dp"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:orientation="vertical"
                    android:layout_height="wrap_content">



                    <TextView
                        android:id="@+id/designation"

                        android:layout_width="320dp"
                        android:layout_height="42dp"
                        android:text="designation" />

                    <TextView
                        android:id="@+id/schoolname"

                        android:layout_width="320dp"
                        android:layout_height="42dp"
                        android:text="schoolname" />

                    <TextView
                        android:id="@+id/cluster"

                        android:layout_width="320dp"
                        android:layout_height="42dp"
                        android:text="Cluster" />

                    <TextView
                        android:id="@+id/block"

                        android:layout_width="320dp"
                        android:layout_height="42dp"
                        android:text="block" />

                    <TextView
                        android:id="@+id/district"

                        android:layout_width="320dp"
                        android:layout_height="42dp"
                        android:text="District" />

                    <TextView
                        android:id="@+id/noa"

                        android:layout_width="320dp"
                        android:layout_height="42dp"
                        android:text="noa" />

                    <TextView
                        android:id="@+id/degree"

                        android:layout_width="320dp"
                        android:layout_height="42dp"
                        android:text="Degree" />


                    <TextView
                        android:id="@+id/doj"

                        android:layout_width="320dp"
                        android:layout_height="42dp"
                        android:text="Date of Joining " />


                </LinearLayout>
            </FrameLayout>


            <TextView

                android:layout_width="match_parent"

                android:textSize="20dp"
                android:textStyle="bold"
                android:layout_marginTop="10dp"

                android:layout_height="38dp"
                android:paddingTop="5dp"
                android:shadowColor="#000"
                android:shadowDx="0"
                android:shadowDy="0"
                android:shadowRadius="100"
                android:background="#ffffff"
                android:textAlignment="center"
                android:textColor="#000000"
                android:text="Contact Info." />
            <FrameLayout
                android:layout_width="match_parent"
                android:background="@drawable/myborder"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="5dp"
                android:layout_marginRight="10dp"
                android:layout_height="120dp">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:orientation="vertical"
                    android:layout_height="100dp">
                    <TextView
                        android:id="@+id/contact"

                        android:layout_width="320dp"
                        android:layout_height="42dp"
                        android:text="contact" />

                    <TextView
                        android:id="@+id/email"
                        android:layout_width="320dp"
                        android:layout_height="42dp"
                        android:layout_below="@+id/gender"
                        android:layout_marginTop="2dp"
                        android:text="email" />
                </LinearLayout>

            </FrameLayout>

        </LinearLayout>
    </ScrollView>

</LinearLayout>
